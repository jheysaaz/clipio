{
  "name": "snippy",
  "displayName": "Snippy: Snippets Manager",
  "description": "A powerful browser extension for managing and inserting snippets with lightning speed and increase your productivity.",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "format": "prettier --write \"./**/*.{ts,tsx,js,jsx,json,css,html}\"",
    "format:check": "prettier --check \"./**/*.{ts,tsx,js,jsx,json,css,html}\""
  },
  "dependencies": {
    "lucide-react": "^0.553.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^7.9.5",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/webextension-polyfill": "^0.10.0",
    "@vitejs/plugin-react": "^4.2.1",
    "prettier": "^3.6.2",
    "typescript": "~5.6.3",
    "vite": "^7.2.2",
    "vite-plugin-zip-pack": "^1.2.4",
    "webextension-polyfill": "^0.10.0"
  }
}
